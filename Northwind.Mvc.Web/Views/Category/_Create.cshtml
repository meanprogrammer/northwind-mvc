@model Northwind.Mvc.Data.Models.Category

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4 id="myModalLabel">Create Foo Bar</h4>
</div>

@using (Html.BeginForm("Create", "Category", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    
    <div class="modal-body">
        <div class="row">
            <div class="col-md-6">
                @Html.LabelFor(model => model.CategoryName)
                @Html.TextBoxFor(model => model.CategoryName, new { @class="form-control input-md" })
                @Html.ValidationMessageFor(model => model.CategoryName)
            </div>
            <div class="col-md-6">
                @Html.LabelFor(model => model.Description)
                @Html.TextBoxFor(model => model.Description, new { @class="form-control input-md" })
                @Html.ValidationMessageFor(model => model.Description)
            </div>
        </div>
    </div>

    <div class="modal-footer">
        <button class="btn" data-dismiss="modal" aria-hidden="true">Undo</button>
        <button class="btn btn-primary" type="submit">Save</button>
    </div>
    
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}